{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "Shared/*": ["./src/Shared/*"],
      "Authorization/*": ["./src/Authorization/*", "./src/Authorization"],
      "Backoffice/*": ["./src/Backoffice/*", "./src/Backoffice"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}